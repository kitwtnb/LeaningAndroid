<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@color/window_background</item>
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryDark">@color/toolbar_background_dark</item>
        <item name="android:textColorPrimary">@color/toolbar_title</item>
        <item name="android:textColorSecondary">@color/toolbar_overflow_icon</item>
        <item name="windowActionModeOverlay">true</item>
    </style>

    <style name="AppTheme.TitleBarTextColor" parent="@style/TextAppearance.AppCompat.Widget.ActionBar.Title">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AppTheme.ActionBar" parent="@style/Theme.AppCompat.Light.DarkActionBar">
        <item name="android:titleTextStyle">@style/AppTheme.TitleBarTextColor</item>
        <item name="colorPrimary">@color/toolbar_background</item>
        <item name="colorPrimaryDark">@color/toolbar_background_dark</item>
    </style>
</resources>
